<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgBackGroundNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/back_ground_navigation" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <TextView
                style="@style/TextViewTitle"
                android:fontFamily="serif"
                android:text="@string/noi_dung" />

            <TextView
                style="@style/TextViewTitle"
                android:layout_height="1.8dp"
                android:layout_marginTop="4dp"
                android:background="#2a0531" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvNoiDung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <TextView
                style="@style/TextViewTitle"
                android:fontFamily="serif"
                android:text="@string/san_pham" />

            <TextView
                style="@style/TextViewTitle"
                android:layout_height="1.8dp"
                android:layout_marginTop="4dp"
                android:background="#2a0531" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
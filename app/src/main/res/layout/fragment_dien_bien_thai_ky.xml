<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeCustomActionBar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAnhThaiNhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <TextView
                style="@style/TextViewContent"
                android:layout_marginTop="6dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Hình ảnh phát triển của thai nhi" />


            <TextView
                android:layout_marginTop="16dp"
                style="@style/TextViewTitle"
                android:gravity="center|left"
                android:fontFamily="monospace"
                android:text="Thai Phụ" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@drawable/shape_group_dat_ten_cho_be"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewContent"
                    android:layout_marginTop="6dp"
                    android:fontFamily="monospace"
                    android:text="Thể trạng"
                    android:textColor="@color/colorBackGroundActionBar"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTheTrangThaiPhu"
                    style="@style/TextViewContent"
                    android:layout_marginTop="6dp"
                    android:fontFamily="monospace"
                    android:text="Trong tuần này..."
                    android:textSize="20dp" />

                <TextView
                    style="@style/TextViewContent"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:text="Tâm lý"
                    android:textColor="@color/colorBackGroundActionBar"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvTamLyThaiPhu"
                    style="@style/TextViewContent"
                    android:textSize="20dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="monospace"
                    android:text="Trong tuần này..." />

            </LinearLayout>

            <TextView
                style="@style/TextViewTitle"
                android:fontFamily="monospace"
                android:gravity="center|left"
                android:text="Thai Nhi"
                android:layout_marginTop="16dp"

                />

                <TextView
                    android:id="@+id/tvTinhTrangThaiNhi"
                    style="@style/TextViewContent"
                    android:textSize="20dp"
                    android:padding="6dp"
                    android:background="@drawable/shape_group_dat_ten_cho_be"
                    android:fontFamily="monospace"
                    android:text="Trong tuần này..." />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTenChuyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="6dp"
                android:fontFamily="monospace"
                android:text="Sự tích dã tràng"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="@color/colorTextViewContent" />

            <TextView
                android:id="@+id/tvNoiDungChuyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="monospace"
                android:text="Ngày sửa ngày xưa"
                android:textColor="@color/colorTextViewContent"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBaiHocCuaChuyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="monospace"
                android:text="Lời bàn: "
                android:textColor="@color/colorTextViewContent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>